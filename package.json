{
  "name": "erResources",
  "private": true,
  "description": "javascript components and resources for future use",
  "version": "1.0.0",
  "license": "MIT",
  "workspaces": [
    "javascript/*",
    "pages/*"
  ],
  "author": "Yohei isshiki",
  "packageManager": "yarn@4.0.2",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "g:build": "cd $INIT_CWD && cross-env NODE_ENV=production",
    "g:start": "cd $INIT_CWD && cross-env NODE_ENV=development"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "babel-loader": "^9.0.1",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.26.0",
    "cross-env": "^7.0.3",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.6.1",
    "sass": "^1.69.5",
    "sass-loader": "^13.1.0",
    "style-loader": "^3.3.1",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.7.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.10.0",
    "webpack-ssi-include-loader": "^1.6.1"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "axios-mock-adapter": "1.17.0",
    "bootstrap": "^4.6.0",
    "dayjs": "^1.10.4",
    "swiper": "^11.0.4"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "prettier --write --cache",
      "eslint --fix --cache"
    ],
    "*.{html,json}": [
      "prettier --write --cache"
    ],
    "*.scss": [
      "prettier --write --cache"
    ]
  }
}
